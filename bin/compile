#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e

indent() {
  sed -u 's/^/       /'
}

echo "-----> Installing Subversion."

sh -c 'echo "# WANdisco Open Source Repo" >> /etc/apt/sources.list.d/WANdisco.list'
sh -c 'echo "deb http://opensource.wandisco.com/ubuntu precise svn18" >> /etc/apt/sources.list.d/WANdisco.list'
wget -q http://opensource.wandisco.com/wandisco-debian.gpg -O- | apt-key add -
apt-get update -y | indent
apt-get install -y subversion | indent
